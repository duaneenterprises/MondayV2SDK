{
    "name": "duaneenterprises/monday-v2-sdk",
    "description": "A comprehensive PHP SDK for Monday.com's GraphQL API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Duane Musser",
            "email": "duane@duaneenterprises.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "MondayV2SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MondayV2SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs src tests",
        "cs-fix": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 